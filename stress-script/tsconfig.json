{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist", 
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true, 
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
},
"include": ["src/**/*"],
"exclude": ["node_modules", "**/*.spec.ts"]
}
